</div>
<div>
    <h4>
        task
    </h4>
    <table class="table">
        @foreach (var item in Model.Tasks){
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(Model => item.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(Model => item.statues)
                    </th>
                    <th>
                        @Html.DisplayNameFor(Model => item.Priority)
                    </th>
                    <th>
                        @Html.DisplayNameFor(Model => item.DeadLine)
                    </th>
                    <th>
                        @Html.DisplayNameFor(Model => item.teammember.Name)

                    </th>
                </tr>
            </thead>
        }
        
   
        <table class="table">
            @foreach (var item in Model.Tasks)
            {
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayFor(Model => item.Title)
                        </th>
                        <th>
                            @Html.DisplayFor(Model => item.statues)
                        </th>
                        <th>
                            @Html.DisplayFor(Model => item.Priority)
                        </th>
                        <th>
                            @Html.DisplayFor(Model => item.DeadLine)
                        </th>
                        <th>
                            
                            <a asp-controller="TeamMember" asp-action="Details" asp-route-id="@item.Teammemberidd">@item.teammember.Name</a>

